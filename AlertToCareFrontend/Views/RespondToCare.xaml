<UserControl x:Class="AlertToCareFrontend.Views.RespondToCare"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlertToCareFrontend.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Gainsboro">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            
        </Grid.ColumnDefinitions>
        <Border x:Name="pageBorder" Style="{StaticResource ResourceKey=BorderStyle}" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0"/>
        <TextBlock Text="Respond To Care" Style="{StaticResource ResourceKey=HeaderStyle}"/>
        <!--<Separator Style="{StaticResource ResourceKey=SeparatorStyle}" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"/>-->
        <TextBlock Text="Personal Information" Grid.Column="0" Grid.Row="1" Style="{StaticResource ResourceKey=HeadingStyle}"/>
        
        <TextBlock Text="Name: " Grid.Column="0" Grid.Row="3" Style="{StaticResource ResourceKey=ContentStyle}"/>
        <TextBlock Text="Age: " Grid.Column="0" Grid.Row="4" Style="{StaticResource ResourceKey=ContentStyle}"/>
        <TextBlock Text="Gender: " Grid.Column="1" Grid.Row="3" Style="{StaticResource ResourceKey=ContentStyle}"/>
        <TextBlock Text="Contact no: " Grid.Column="1" Grid.Row="4" Style="{StaticResource ResourceKey=ContentStyle}"/>

        <TextBlock Text="ICU no: " Grid.Column="2" Grid.Row="2" Style="{StaticResource ResourceKey=ContentStyle}"/>
        <TextBlock Text="Bed no: " Grid.Column="2" Grid.Row="3" Style="{StaticResource ResourceKey=ContentStyle}"/>
        <TextBlock Text="Patient Id: " Grid.Column="2" Grid.Row="4" Style="{StaticResource ResourceKey=ContentStyle}"/>

        <TextBlock Text="Vitals Information" Grid.Column="0" Grid.Row="5" Style="{StaticResource ResourceKey=HeadingStyle}"/>
        
        <TextBlock Text="Spo2 Status: " Grid.Column="0" Grid.Row="6" Style="{StaticResource ResourceKey=ContentStyle}"/>
        <TextBlock Text="BP Status: " Grid.Column="0" Grid.Row="7" Style="{StaticResource ResourceKey=ContentStyle}"/>
        <TextBlock Text="Respiration Status: " Grid.Column="0" Grid.Row="8" Style="{StaticResource ResourceKey=ContentStyle}"/>

        <Button Content="Save" Grid.Column="2" Grid.Row="10" Style="{StaticResource ResourceKey=ButtonStyle}"/>

    </Grid>
</UserControl>
