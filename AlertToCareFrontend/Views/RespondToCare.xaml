<UserControl x:Class="AlertToCareFrontend.Views.RespondToCare"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlertToCareFrontend.Views"
             xmlns:vm="clr-namespace:AlertToCareFrontend.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:RespondToCare></vm:RespondToCare>
    </UserControl.DataContext>
    <StackPanel HorizontalAlignment="Right" Width="544" Margin="0,0,0,10">
        <Grid Background="Gainsboro">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border x:Name="pageBorder" Style="{StaticResource ResourceKey=BorderStyle}" Grid.Column="0" Grid.ColumnSpan="7" Grid.RowSpan="6" Grid.Row="0" Margin="3,3,3,51"/>
            <Separator Style="{StaticResource ResourceKey=HorizontalSeparatorStyle}" Grid.Row="0" Grid.ColumnSpan="7" Margin="10,37,10,42.4" Grid.RowSpan="2"/>

            <TextBlock Text="Respond To Care" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource ResourceKey=HeadingStyle}" Margin="0,8,0,0" VerticalAlignment="Top"/>
            <Separator Style="{StaticResource ResourceKey=HorizontalSeparatorStyle}" Grid.Row="1" Grid.ColumnSpan="7" Margin="10,31.4,10,42.8" Grid.RowSpan="2"/>

            <Separator Style="{StaticResource ResourceKey=HorizontalSeparatorStyle}" Grid.Row="4" Grid.ColumnSpan="7" Margin="10,31.4,10,43.2" />
            <TextBlock Text="Vitals Information" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Style="{StaticResource ResourceKey=HeadingStyle}" Margin="3,52,0,0" VerticalAlignment="Top" Width="191"/>

            <Separator Style="{StaticResource ResourceKey=HorizontalSeparatorStyle}" Grid.Row="5" Grid.ColumnSpan="7" Margin="10,31.6,10,43"/>

            <TextBlock Text="Spo2: " Grid.Column="0" Grid.Row="3" Style="{StaticResource ResourceKey=ContentStyle}" Margin="16,10,0,0" VerticalAlignment="Top"/>
            <ComboBox Grid.Row="3" Grid.ColumnSpan="3" IsEnabled="{Binding ElementName=Spo2Alarm, Mode=TwoWay, Path=IsChecked, Converter={StaticResource ResourceKey=cbvc}}"  ItemsSource="{Binding Path=StatusList}" SelectedItem="{Binding Spo2Status}" Style="{StaticResource ResourceKey=ComboBoxStyle}" Margin="114,5,10,5"/>
            <ToggleButton Name="Spo2Alarm" Grid.Row="3" Grid.Column="2" IsChecked="{Binding Spo2Alarm}" Style="{StaticResource ResourceKey=ToggleButtonStyle}" Margin="78,14,78,14" Grid.ColumnSpan="3"/>

            <TextBlock Text="Blood Pressure: " Grid.Column="0" Grid.Row="4" Style="{StaticResource ResourceKey=ContentStyle}" Margin="10,8,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="99"/>
            <ComboBox Grid.Row="4" Grid.ColumnSpan="2" IsEnabled="{Binding ElementName=BpAlarm, Mode=TwoWay, Path=IsChecked, Converter={StaticResource ResourceKey=cbvc}}" ItemsSource="{Binding Path=StatusList}" SelectedItem="{Binding BpStatus}" Style="{StaticResource ResourceKey=ComboBoxStyle}" Margin="36,1,10,45" Grid.Column="1"/>
            <ToggleButton Name="BpAlarm" Grid.Row="3" Grid.Column="2" IsChecked="{Binding BpAlarm}" Style="{StaticResource ResourceKey=ToggleButtonStyle}" Grid.ColumnSpan="3" Margin="78,31,78,22" Grid.RowSpan="2"/>

            <TextBlock Text="Respiration: " Grid.Column="0" Grid.Row="4" Style="{StaticResource ResourceKey=ContentStyle}" Margin="10,59,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="95"/>
            <ComboBox Grid.Row="4" Grid.ColumnSpan="2" IsEnabled="{Binding ElementName=RespAlarm, Mode=TwoWay, Path=IsChecked, Converter={StaticResource ResourceKey=cbvc}}" ItemsSource="{Binding Path=StatusList}" SelectedItem="{Binding RespRateStatus}" Style="{StaticResource ResourceKey=ComboBoxStyle}" Margin="41,57,5,7" Grid.Column="1"/>
            <ToggleButton Name="RespAlarm" Grid.Row="4" Grid.Column="2" IsChecked="{Binding RespRateAlarm}" Style="{StaticResource ResourceKey=ToggleButtonStyle}" Grid.ColumnSpan="2" Margin="73,24,6,67" Grid.RowSpan="2"/>


            <Button Content="Save" Grid.Column="4" Grid.Row="3" Grid.ColumnSpan="3" Style="{StaticResource ResourceKey=ButtonStyle}" Width="145" HorizontalAlignment="Left" Margin="35,28,0,0" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Top" Grid.RowSpan="2">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.583"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>

        </Grid>
    </StackPanel>

</UserControl>
