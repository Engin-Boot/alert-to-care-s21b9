<Window x:Class="AlertToCareFrontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:AlertToCareFrontend.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="900">

    <Grid Margin="0,0,0,-258">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TabControl Margin="0,10,0,130" Grid.RowSpan="2">
            <TabItem Header="Monitor Occupancy">
                <view:MonitorOccupancy x:Name="MonitorOccupancy" Width="884" Height="505" Margin="0,0,10,0"/>
            </TabItem>

            <TabItem Header="Respond To Care">
                <view:RespondToCare x:Name="RespondToCare" Height="573" x:FieldModifier="public" />
            </TabItem>
            <TabItem Header="ICULayoutConfiguration">
                <view:IcuLayoutConfiguration x:Name="IcuLayoutConfiguration" Height="772" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
